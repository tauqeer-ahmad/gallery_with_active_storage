<%= form_for @gallery, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :title, class: 'text_field form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :pictures, "Upload pictures", class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.file_field :pictures, multiple: true, class: 'form-control' %>
    </div>
  </div>

  <%= render 'pictures', gallery: @gallery %>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  galleries_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
